{# MHA Map render 2023-map-data #}
{# Preprocess #}
{% set year = (fields.field_year.content) %}
{% set title_year = (fields.nothing_1.content) %}
{% set map_id = (fields.field_map_id.content) %}
{% set map_js_id = (fields.field_js_map_id.content) %}
{% set map = (fields.field_js.content ) %}
{% set map_copy = (fields.field_copy.content ) %}

{# Edit #}
{% if logged_in %}
    <div class="login mb-3 pb-2">
        {{ fields.edit_node.content }}
    </div>
{% endif %}
{# Title and Year #}
<h1 class="map-title">
    {{ title_year }}
</h1>

{# Colored Lines #}
<div class="issues-2024 map-color-lines pb-5">
    <div class="line border-bottom">
        <span class="one"></span>
        <span class="second"></span>
        <span class="three"></span>
    </div>
</div>

<div class="issue-map-wrapper">
    {# Map JS -- this is the actual map #}
    <div class="map-js">
        {# Attach General JS #}
        <script src="/libraries/mha-maps/2024/ammapteal2024javascript.js" type="text/javascript"></script>
        {# Attach Map #}
        <script src="/libraries/mha-maps/2024/{{ map_js_id }}" type="text/javascript"></script>
        {{ map }}
        <div id="{{ map_id }}" style="width: 100%; background-color:#ffffff; height: 700px;">&nbsp;</div>

    </div>

    {# Map Bar #}
    <div class="map-bar w-100 py-2">
        <img class="pull-right" alt="empty" src="/libraries/mha-maps/2024/24-bar.png" style="width: 250px">
    </div>
</div>
{# Copy #}
<div class="map-copy py-3 px-5">
    {{ map_copy }}
</div>

