{# Alert #}
{% if page.alert %}
  {% block alert %}
    {{ page.alert }}
  {% endblock %}
{% endif %}

<header id="header" class="header-default border-bottom border-light shadow-sm">

  {% if page.topbar %}
    <div class="topbar">
      <div class="topbar-inner">
        <div class="container">
          <div class="content">{{ page.topbar }}</div>
        </div>
      </div>
    </div>
  {% endif %}

  <div class="header-main">
    <div class="container">
      <div class="header-inner clearfix">
        <div class="row">
          <div class="col-md-3 col-sm-4 col-xs-4 branding">
            {% if page.branding %}
              {{ page.branding }}
            {% endif %}
          </div>
          <div class="col-md-9 col-sm-8 col-xs-8 right-header">
            {% if page.header_right %}
              {{ page.header_right }}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="main-menu">
    <div class="container header-content-layout">
      <div class="header-main-inner p-relative">
        <div class="row">
          <div class="col">
            <div class="area-main-menu">
              <div class="area-inner">
                <div class="gva-offcanvas-mobile">
                  <div class="close-offcanvas hidden"><i class="fa fa-times"></i></div>
                  {% if page.main_menu %}
                    {{ page.main_menu }}
                  {% endif %}
                  {% if page.offcanvas %}
                    <div class="after-offcanvas hidden">
                      {{ page.offcanvas }}
                    </div>
                 {% endif %}
                </div>

                <div id="menu-bar" class="menu-bar hidden-lg hidden-md">
                  <span class="one"></span>
                  <span class="two"></span>
                  <span class="three"></span>
                </div>


              </div>
            </div>
          </div>
          <div class="col">  {% if page.search %}
              <div class="gva-search-region search-region">
                <span class="icon"><i class="fa fa-search"></i></span>
                <div class="search-content">
                  {{ page.search }}
                </div>
              </div>
            {% endif %}</div>
          <div class="col"> {% if page.quick_side %}
              <div class="quick-side-icon hidden-xs hidden-sm">
                <div class="icon"><a href="#"><span class="qicon fa fa-bars"></span></a></div>
              </div>
            {% endif %}</div>
        </div>{# /row #}
      </div>
    </div>
  </div>

</header>
